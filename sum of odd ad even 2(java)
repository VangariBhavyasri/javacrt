import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args)  {
        Scanner s=new Scanner(System.in);
    int n,i;
    n=s.nextInt();
    int a[]=new int[n];
    for(i=0;i<n;i++)
    {
        a[i]=s.nextInt();
        
    }
    int sum1=0,sum2=0;
    for(i=0;i<n;i++)
        if(a[i]%2==0)
        {
            sum1=sum1+a[i];
        }
    else
    {
sum2=sum2+a[i];
    }
    System.out.println(sum2);
    System.out.println(sum1);
}
}
